<!DOCTYPE html>
<style type="text/css">
	table{
		border: 1px solid #ccc;
	}
	table th th{
		border: 1px solid #ccc;
		font-weight: bold;
	}
	table tr td{
		border: 1px solid #ccc;
	}
	span{
		width: 100px;
		padding-left: 25px;
	}
</style>

<fieldset>
	<legend>Cadastro</legend>

	<form action="<%= rota %>" method="post">
		<dir>
			<label for="nome">Nome</label>
			<input type="text"  id="nome" name="nome" value= "<%= @nome %>" >
		</dir>
			<input type="submit" name="Enviar">
	</form>
</fieldset>
<table>
	<tr>
		<th>ID:</th>
		<th>Nome:</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

<% @produtos.each do |produto| %>
	<tr>
		<td><%= produto.id%></td>
		<td><%= produto.nome%></td>
		<td>
			<a href="/produto/<%= produto.id %>/alterar">Alterar</a></td>
		<td>
			<a href="/produto/<%= produto.id %>/excluir">Excluir</a></td>
	</tr>
	<% end %>
</table>
